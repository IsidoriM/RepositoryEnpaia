        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Images/user.png" class="img-circle elevation-2" alt="User Image" />
            </div>
            @if (Session["TipoUtenza"].ToString() == "C")
            {
                <div class="info">
                    <a href="#" name="Utente" style="white-space: pre-wrap;" title="@ViewBag.NomeUtente">@Session["NomeUtente"]</a>
                </div>
            }
            else
            {
                <div class="info">
                    <a href="#" name="Utente" style="white-space: pre-wrap;" title="@ViewBag.NomeUtente">@Session["Posizione"]-@Session["NomeUtente"]</a>
