<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4" style="background: #0c773c">
    <!-- Brand Logo -->
    <div style="background-color:white; background-image: url(@Url.Content("~/Images/Logo-Fondazione-Enpaia.png")); background-size:cover; background-position: 0; height: 140px"></div>
    <!-- Sidebar -->
    <div class="sidebar" style="overflow-y: auto; height: calc(100% - 140px)">
