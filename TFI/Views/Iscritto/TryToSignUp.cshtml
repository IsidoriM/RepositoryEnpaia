
@{
    ViewBag.Title = "Enpaia | Sign Up";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

@section showMessage{
    @{Html.RenderPartial("PartialViewShowMessages");}
}

<div class="container pt-3">
    <div class="card" style="background-color: #097132">
        <div class="mb-4 d-flex justify-content-center w-100" style="background-color: #097132">
            <div class="text-center mr-3">
                <img class="mt-3 mb-3" style="border-radius: 2%; width:123px; background-color:white" src="~/Images/Logo-Fondazione-Enpaia.png">

            </div>

            <div class="text-sm-center text-md-left">
                <h2 style="margin-top:50px;">
                    <label class="text-white" style="font-family: 'Poppins',sans-serif;">Registrazione Iscritto</label>
                </h2>

            </div>
        </div>

        <div class="p-3 text-white d-flex flex-column justify-content-center align-items-center">
            <div class="form-group w-75">
                <label for="mat">Matricola:</label>
                <input required type="text" name="mat" id="mat" class="form-control" />
            </div>
            <div class="form-group w-75">
                <label for="cf">Codice Fiscale:</label>
                <input required type="text" name="cf" id="cf" class="form-control" />
            </div>
            <div class="d-flex justify-content-end w-75">
                <button id="verify" class="btn btn-primary" style="width: 120px; font-size: 18px">Verifica</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $('#verify').click(function () {
        var mat = $('#mat').val();
        var cf = $('#cf').val();
        window.location = '@Url.Action("SignUp", "Iscritto")?matricola=' + mat + '&cf=' + cf;
    })
</script>