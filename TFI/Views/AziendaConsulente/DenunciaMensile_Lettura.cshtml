                                                            <p id="totOccasionali">€ @Model.TotTestata.TotImpOcc</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-2">
                                                        <div class="row" style="float:right">
                                                            @Html.Label("Figurativa")
                                                            <p id="totFigurativa">€ @Model.TotTestata.TotImpFig</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-2">
                                                        <div class="row" style="float:right">
