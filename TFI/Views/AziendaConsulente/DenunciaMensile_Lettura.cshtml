                                                }
                                            </div>
                                            <div class="col-3">
                                                @Html.ActionLink("Totali", "TotaliDIPA", "AziendaConsulente", new { anno = Model.Anno, mese = Model.Mese, proDen = Model.ProDen, idDipa = Model.IdDipa }, new { @class = "btn_official", id = "btn_totali" })
                                            </div>
