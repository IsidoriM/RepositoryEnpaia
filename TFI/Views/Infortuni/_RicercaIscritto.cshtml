@using Newtonsoft.Json
@model OCM.TFI.OCM.Infortuni.RicercaIscrittoModel
<div class="container-fluid">
    <script type="module" src="~/dist/js/partials/RicercaIscritto/ricercaIscritto.js"></script>
    <script type="module" src="~/dist/js/partials/RicercaIscritto/selector.js"></script>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "RicercaIscrittoForm" }))
    {
        <div class="row">
            <div class="col-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.MatricolaFornita)
                    @Html.TextBoxFor(model => model.MatricolaFornita, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.CognomeFornito)
                    @Html.TextBoxFor(model => model.CognomeFornito, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeFornito)
                    @Html.TextBoxFor(model => model.NomeFornito, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.CodiceFiscaleFornito)
                    @Html.TextBoxFor(model => model.CodiceFiscaleFornito, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-3">
                <button id="RicercaIscrittoButton" class="btn btn-outline-success w-100">Cerca Iscritto</button>
            </div>
        </div>
        if (Model.IscrittiTrovati != null)
        {
            <div class="container-fluid mt-4">
                <h3>Seleziona un iscritto:</h3>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr >
                        <th>@Html.LabelFor(model => model.MatricolaFornita)</th>
                        <th>@Html.LabelFor(model => model.NomeFornito)</th>
                        <th>@Html.LabelFor(model => model.CognomeFornito)</th>
                        <th>@Html.LabelFor(model => model.CodiceFiscaleFornito)</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var iscritto in Model.IscrittiTrovati)
                        {
                            <tr>
                                <td>@iscritto.Matricola</td>
                                <td>@iscritto.Nome</td>
                                <td>@iscritto.Cognome</td>
                                <td>@iscritto.CodiceFiscale</td>
                                <td><button type="button" class="btn btn-sm btn-outline-success" onclick="$(document).trigger('iscrittoSelezionato', @JsonConvert.SerializeObject(iscritto))">seleziona</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>    
        }
    }
</div>

