        });

    })
    function searchRow() {
        var $rows = $('#table > tbody > tr').not(".header");
        var val1 = $.trim($('#search').val()).replace(' ').toLowerCase();

        var val2 = $.trim($('#searchMat').val()).replace(' ').toLowerCase();
        var val3 = $.trim($('#searchPos').val()).replace(' ').toLowerCase();
        var val4 = $.trim($('#searchAzi').val()).replace(' ').toLowerCase();



        $rows.show().filter(function () {
            var text1 = $(this).find('td:nth-child(2)').text().replace(' ').toLowerCase();
            var text2 = $(this).find('td:nth-child(1)').text().replace(' ').toLowerCase();
            var text3 = $(this).find('td:nth-child(5)').text().replace(' ').toLowerCase();
            var text4 = $(this).find('td:nth-child(6)').text().replace(' ').toLowerCase();

            return !~text1.indexOf(val1) || !~text2.indexOf(val2) || !~text3.indexOf(val3) || !~text4.indexOf(val4);
        }).hide();
    }

</script>


