@model TFI.Models.PasswordRecoveryViewModel
@{
    ViewBag.Title = "Enpaia | Password Recovery";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

@{Html.RenderPartial("PartialViewShowMessages");}

<div class="container col-lg-6 col-md-8 col-sm-12 text-white p-5 mt-3" style="background-color: #097132">
    <div class="row mb-4 d-flex justify-content-center">
        <div class="text-center mr-3">
            <img class="mt-3 mb-3" style="border-radius: 2%; width:123px; background-color:white" src="~/Images/Logo-Fondazione-Enpaia.png">

        </div>

        <div class="text-sm-center text-md-left">
            <h2 style="margin-top:50px;">
                <label class="text-white" style="font-family: 'Poppins',sans-serif;">Recupero Password</label>
            </h2>

        </div>
    </div>

    <form method="post" style="font-size: 18px">
        <div class="form-group">
            @if (Model.TipoUtente == "I")
            {
                <label>Inserisci il tuo codice fiscale:</label>
                <input required type="text" name="Username" class="form-control" value="@Model.Username" placeholder="Inserire il codice fiscale"/>
            }
            else if (Model.TipoUtente == "A")
            {
                <label>Inserisci il codice fiscale o la partita iva:</label>
                <input required type="text" name="Username" class="form-control" value="@Model.Username" placeholder="Inserire il codice fiscale o la partita iva"/>
            }
            else if (Model.TipoUtente == "C")
            {
                <label>Inserisci il codice territoriale:</label>
                <input required type="text" name="Username" class="form-control" value="@Model.Username" placeholder="Inserire il codice territoriale"/>
            }
            <input type="text" name="TipoUtente" value="@Model.TipoUtente" hidden/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Conferma" id="submitButton" />
        </div>
    </form>
</div>
